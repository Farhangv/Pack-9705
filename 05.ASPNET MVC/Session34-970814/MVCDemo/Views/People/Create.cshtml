
@{
    ViewBag.Title = "ثبت کاربر";
}

<hr/>
<form @*action="/People/Store"*@ method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">نام</label>
        <div class="col-md-10">
            <input class="form-control" id="Name" name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Family">نام خانوادگی</label>
        <div class="col-md-10">
            <input class="form-control" id="Family" name="Family" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Age">سن</label>
        <div class="col-md-10">
            <input class="form-control" id="Age" name="Age" type="number" />
        </div>
    </div>
    <button type="submit" class="btn btn-success btn-sm pull-left">
        <span class="fa fa-save"></span>
        ثبت
    </button>
</form>


